@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuário";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="text-center">

        <h1 class="display-4">Editar Usuário</h1>

    </div>

    <form asp-controller="UsuarioController" asp-action="Editar" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <!--A propriedade asp-for informa o campo que será atualizado-->
            <input type="text" asp-for="NomeUsuario" class="form-control" placeholder="Maria José">
            @Html.ValidationMessageFor(x => x.NomeUsuario)
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Endereço de E-mail</label>
            <input type="email" asp-for="EmailUsuario" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="exemplo@gmail.com">
            <small id="emailHelp" class="form-text text-muted">Nós não compartilharemos suas informações com mais ninguém</small>
            @Html.ValidationMessageFor(x => x.EmailUsuario)
        </div>
        <div class="form-group">
            <label>Senha</label>
            <input type="text" asp-for="Login" class="form-control" placeholder="MarimariaJojo123">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <button type="submit" class="btn btn-success btn-block">Alterar</button>
    </form>
    <br />
    <a class="btn btn-dark btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>

</body>
</html>

